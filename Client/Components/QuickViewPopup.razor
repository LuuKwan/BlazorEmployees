@rendermode InteractiveServer
@if(_employee != null)
{

  <div class="modal fade show d-block" id="EmployeeQuickViewModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            Employee Quick View
          </h5>
          <button type="button" class="close btn btn-lg" data-dismiss="modal" @onclick=@CloseMe>
            <span> &times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="col row">
            <div class="col-12 col-sm-8">
              <div class="form-group row">
                <label class="col-sm-5 col-form-label"> Employee ID</label>
                <div class="col-sm-7">
                  <label type="Text" class="form-control-plaintext">
                    @_employee.EmployeeId
                  </label>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-5 col-form-label"> Employee Name</label>
                <div class="col-sm-7">
                  <label type="Text" class="form-control-plaintext">
                    @_employee.FirstName @_employee.LastName
                  </label>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
}

